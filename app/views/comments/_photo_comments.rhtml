<table class="outer" cellpadding="0" cellspacing="0">
  <% for comment in comments do %>
  <tr class="<%= cycle('even','odd') %>">
    <td><%= link_to render_background_thumbnail(comment.photo), photo_view_path(comment.commentable_id, comment.photo.title.to_permalink) %></td>
    <td width="100%"><%= comment.formatted_body %></td>
  </tr>
  <% end %>
</table>