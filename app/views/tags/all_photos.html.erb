<%= feed_title_block("All Photos Tagged #{@tag.name}", {:controller => 'feed', :action => :all_in_tag, :id => @tag.name}, {:auto_rss => true}) %>
<% if @tag.taggings.count > 0 %>
  <small><%= will_paginate @photos %></small>
  <div class="step clearfix">
    <% for photo in @photos %>
      <div class="listPhotos">
        <%= render :partial => '/photos/small_picture', :locals => { :photo => photo} %>
      </div>
    <% end %>
  </div>
  <small><%= will_paginate @photos %></small>
<% else %>
  <h3>There are no photos tagged as <%=@tag.name%>.</h3>
<% end %>
