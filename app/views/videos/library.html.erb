<%= start_tabnav :account %>
  <div class="block_title"><h2>My Video Library</h2></div>
  <div class="step">
    <p>This page lists all your purchased Videos.</p>
  </div>
  <div class="block_title"><h2>My Video Library</h2></div>
  <small><%= will_paginate @lightboxes, {:param_name => 'lightbox_page'} %></small>
  <% if @lightboxes.length > 0 %>
    <div class="step">
      <% for lightbox in @lightboxes %>
        <%= render :partial => 'videos/library_video', :locals => {:lightbox => lightbox} %>
      <% end %>
      <br clear="all">
    </div>
  <% end %>
  <small><%= will_paginate @lightboxes, {:param_name => 'lightbox_page'} %></small>
  <% unless (@lightboxes.length > 0) ||  (@licenses.length > 0)  %>
    <div class="step">
      <p>No videos in your library</p>
    </div>
  <% end %>
<%= end_tabnav %>