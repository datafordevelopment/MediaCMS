<h1>Listing News Topics</h1>

<table>
  <tr>
  <% for column in NewsTopic.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for news_topic in @news_topics %>
  <tr>
  <% for column in NewsTopic.content_columns %>
    <td><%=h news_topic.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => news_topic %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => news_topic %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => news_topic }, :confirm => 'Are you sure?', :post => true %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @news_topic_pages.current.previous } if @news_topic_pages.current.previous %>
<%= link_to 'Next page', { :page => @news_topic_pages.current.next } if @news_topic_pages.current.next %> 

<br />

<%= link_to 'New News Topic', :action => 'new' %>
